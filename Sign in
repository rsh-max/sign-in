    <title>Login and Admin Panel</title>
    <style>
        /* Bədən (Body) üçün stil */
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #2980b9, #2c3e50);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            flex-direction: column;
        }

        /* Giriş formunun stil */
        .login-container,
        .add-user-container {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            margin-bottom: 20px;
            display: none;
        }

        .login-container.active,
        .add-user-container.active {
            display: block;
        }

        .login-container h2,
        .add-user-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #2c3e50;
        }

        .login-container label,
        .add-user-container label {
            display: block;
            margin-bottom: 5px;
            color: #34495e;
        }

        .login-container input[type="text"],
        .login-container input[type="password"],
        .add-user-container input[type="text"],
        .add-user-container input[type="password"],
        .add-user-container input[type="url"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #bdc3c7;
            border-radius: 5px;
        }

